# --- 1. Define Your Video Data ---
# A list of dictionaries to hold the information for each video.
# Replace these placeholders with your actual data.
SALES_VIDEOS = [
    {
        "title": "How to Build Rapport in Sales",
        "url": "https://youtu.be/vkzlRvsMMNQ?si=VChG6Rpl9vNcxk9w",
        "thumbnail_url": "https://i.ytimg.com/vi/VIDEO_ID_1/hq720.jpg" 
    },
    {
        "title": "Mastering Cold Calls: Objection Handling",
